<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/primary_button_radius" />
            <stroke
                android:width="@dimen/primary_button_stroke"
                android:color="@color/inverseButtonBorderPressed" />
            <solid android:color="@color/inverseButtonPressed"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/primary_button_radius" />
            <stroke
                android:width="@dimen/primary_button_stroke"
                android:color="@color/inverseButtonBorderFocused" />
            <solid android:color="@color/inverseButton"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/primary_button_radius" />
            <stroke
                android:width="@dimen/primary_button_stroke"
                android:color="@color/inverseButtonBorder" />
            <solid android:color="@color/inverseButton" />
        </shape>
    </item>
</selector>